# Run the container with `docker run -p 3000:3000 -t betting-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system betting-api && \
          adduser --system -G betting-api betting-api

COPY dist/apps/betting-api betting-api/
RUN chown -R betting-api:betting-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix betting-api --omit=dev -f install

CMD [ "node", "betting-api" ]
